<% if @node.errors.any? %>
    <h2>The following errors prevented the node from being created</h2>
    <ul>
        <% @node.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @node, :html => { :multipart => true } do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :content %><br/>
        <%= f.text_area :content, :cols => "50", :rows => "10" %>
    </p>
    
    <p>
        <%= f.label :image %><br/>
        <%= f.file_field :image %>
    </p>
    
    <input type="hidden" name="parent" value="<%= @parent.id %>" />
    
    <p>
        <%= f.submit %>
    </p>
<% end %>

<% pos = @node.position %>
<%= link_to "Add image", { :controller => "images", :action => "new", :position => @node.position } %>


<%= link_to "Back to node listing", nodes_path %>
